<%= render 'layouts/header' %>

<div class="welcome">
  <h1>Welcome to the private event builder</h1>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: signup_path) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form_control'%>
      <%= f.submit "Submit Name", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
