<%= render "layouts/header" %>
<div class="col-md-6 col-md-offset-3">
  <h1> All upcoming events </h1>
    <ul class="events">
      <% @all_upcoming_events.each do |event| %>
        <li><%= link_to event.date, event%></li>
      <% end %>
    </ul>
</div>

<div class="col-md-6 col-md-offset-3">
  <h1> All past events </h1>
    <ul class="events">
      <% @all_past_events.each do |event| %>
        <li><%= link_to event.description, event%></li>
      <% end %>
    </ul>
</div>
